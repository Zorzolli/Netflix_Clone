<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black100"
        tools:context=".Episodes">

        <ImageView
            android:id="@+id/imageVideo"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <ImageView
            android:id="@+id/playVideo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="50dp"
            android:src="@drawable/play" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageVideo"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="The Witcher"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/relevance"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="93% relevante"
            android:textColor="@color/green"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/year"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/relevance"
            android:fontFamily="sans-serif-black"
            android:text="2019"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/season"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/year"
            android:fontFamily="sans-serif-black"
            android:text="1 Temporada"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relevance"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="@string/description"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cast_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="@string/castText"
            android:textColor="@color/lightGray"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/add1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cast_text"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_add" />

        <ImageView
            android:id="@+id/add2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cast_text"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/add1"
            android:src="@drawable/ic_add" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cast_text"
            android:layout_marginStart="37dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/add2"
            android:src="@drawable/ic_share" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/add1"
            android:layout_marginStart="20dp"
            android:text="Minha Lista"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/add2"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/text1"
            android:text="Classifique"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/share"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/text2"
            android:text="Compartilhe"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/episodes"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-black"
            android:text="EPISODES"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/trailer"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/episodes"
            android:fontFamily="sans-serif-black"
            android:layout_marginBottom="30dp"
            android:text="TRAILER E MORE"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/likeThis"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text3"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/trailer"
            android:fontFamily="sans-serif-black"
            android:layout_marginBottom="30dp"
            android:text="MORE LIKE THIS"
            android:textColor="@color/white" />
    </RelativeLayout>
</ScrollView>